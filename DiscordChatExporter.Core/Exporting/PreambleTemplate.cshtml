        }

        .chatlog {
            padding: 1rem 0;
            width: 100%;
            border-top: 1px solid @Themed("rgba(255, 255, 255, 0.1)", "#eceeef");
            border-bottom: 1px solid @Themed("rgba(255, 255, 255, 0.1)", "#eceeef");
